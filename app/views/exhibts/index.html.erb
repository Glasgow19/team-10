<p id="notice"><%= notice %></p>

<h1>Exhibts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exhibts.each do |exhibt| %>
      <tr>
        <td><%= exhibt.name %></td>
        <td><%= link_to 'Show', exhibt %></td>
        <td><%= link_to 'Edit', edit_exhibt_path(exhibt) %></td>
        <td><%= link_to 'Destroy', exhibt, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

